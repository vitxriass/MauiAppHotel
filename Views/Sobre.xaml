<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Sobre"
             Title="Sobre"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">
    
    
   
        <VerticalStackLayout VerticalOptions="CenterAndExpand"
                       Padding="10"
                       Spacing="10">
            
        <Button Text="Sobre"
                TextColor="AntiqueWhite"
        FontFamily="DMSerifTextRegular"
       FontSize="35"
        Clicked="OnSobreButtonClicked" />

        <Label Text="Nosso hotel tem como missão trazer o maior conforto a você e sua familia. Esperamos que sua estadia seja satisfatória!"
  FontSize="Body"
 TextColor="{StaticResource SecondaryDarkText}"
  HorizontalOptions="Center"/>
 

        <Label Text="Desenvolvedor: Vitoria Andrade"
               FontSize="Body"
               TextColor="{StaticResource SecondaryDarkText}"
               HorizontalOptions="Center"/>

        

        <Label Text="Ano de Desenvolvimento: 2024"
               FontSize="Body"
               TextColor="{StaticResource SecondaryDarkText}"
               HorizontalOptions="Center"/>


        </VerticalStackLayout>
</ContentPage>